<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.geseni_pc.examen1.Pelicula1">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#4fffa723">

        <TextView
            android:layout_width="258dp"
            android:layout_height="43dp"
            android:text="LA VICTORIA FINAL"
            android:id="@+id/titulo"
            android:layout_row="0"
            android:layout_column="0"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="#68ff6f16"
            android:textColor="#060606"
            android:layout_columnSpan="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="HORA INICIO:"
            android:id="@+id/hora1"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#080808"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7:30pm"
            android:id="@+id/horaA"
            android:layout_row="1"
            android:layout_column="1"
            android:textStyle="bold|italic"
            android:textColor="#ff6b58" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:text="HORA FINAL"
            android:id="@+id/hora2"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="#0a0a0a"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:30pm"
            android:id="@+id/textView2"
            android:layout_row="2"
            android:layout_column="1"
            android:textStyle="bold|italic"
            android:textColor="#ff6b58" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="LUGAR:"
            android:id="@+id/lugar1"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#080808"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salon C-302"
            android:id="@+id/salonC"
            android:layout_row="3"
            android:layout_column="1"
            android:textStyle="bold|italic"
            android:textSize="15dp"
            android:textColor="#ff5940" />

        <ImageView
            android:layout_width="166dp"
            android:layout_height="166dp"
            android:id="@+id/imageView5"
            android:src="@drawable/uno"
            android:layout_row="8"
            android:layout_column="0" />

    </GridLayout>
</RelativeLayout>
