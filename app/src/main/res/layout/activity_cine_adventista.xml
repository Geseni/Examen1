<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CineAdventista">

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="PELICULAS ADVENTISTAS"
        android:id="@+id/peliculas"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#3c96ff"
        android:textColor="#010101"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView"
        android:src="@drawable/uno"
        android:layout_below="@+id/peliculas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/descripcion1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="La Victoria Final"
        android:id="@+id/victoriafinal"
        android:layout_below="@+id/peliculas"
        android:layout_toRightOf="@+id/imageView"
        android:textColor="#a13517"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Todas las Luchas que hay en la vida, siempre al final tendran sus recompensas."
        android:id="@+id/descripcion1"
        android:layout_below="@+id/victoriafinal"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toLeftOf="@+id/click1"
        android:layout_toStartOf="@+id/click1"
        android:textStyle="italic"
        android:textSize="15dp"
        android:textColor="#070707" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/click1"
        android:checked="false"
        android:layout_below="@+id/victoriafinal"
        android:layout_alignRight="@+id/listView"
        android:layout_alignEnd="@+id/listView" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView2"
        android:src="@drawable/dos"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UN SUEÑO DE FE"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toLeftOf="@+id/click2"
        android:layout_toStartOf="@+id/click2"
        android:textSize="20dp"
        android:textColor="#fc15c021"
        android:textStyle="bold" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="En la vida cada sueño o cada meta que nos trasamos, en un paso adelante."
        android:id="@+id/descripcion2"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/click2"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textSize="15dp"
        android:textStyle="italic"
        android:textColor="#080808" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/click2"
        android:checked="false"
        android:layout_alignTop="@+id/textView"
        android:layout_alignRight="@+id/listView"
        android:layout_alignEnd="@+id/listView" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView3"
        android:src="@drawable/tres"
        android:layout_below="@+id/descripcion2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="El Señor de los Milagros"
        android:id="@+id/señor"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#224c9e"
        android:layout_below="@+id/descripcion2"
        android:layout_alignLeft="@+id/descripcion2"
        android:layout_alignStart="@+id/descripcion2" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Hay una guerra entre tribus, por ganar un anillo, ese anillo representa salvacion a su tribu."
        android:id="@+id/descripcion3"
        android:layout_below="@+id/señor"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toLeftOf="@+id/click3"
        android:layout_toStartOf="@+id/click3"
        android:textSize="15dp"
        android:textColor="#080808"
        android:textStyle="italic" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/click3"
        android:checked="false"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignRight="@+id/listView"
        android:layout_alignEnd="@+id/listView" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/imageView4"
        android:src="@drawable/cuatro"
        android:layout_alignBottom="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="La Ultima Batalla"
        android:id="@+id/batalla"
        android:layout_above="@+id/imageView4"
        android:layout_alignLeft="@+id/descripcion4"
        android:layout_alignStart="@+id/descripcion4"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#b98435" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="La segunda venida de Dios, es un encuentro entre Dios y el hombre."
        android:id="@+id/descripcion4"
        android:layout_below="@+id/batalla"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toLeftOf="@+id/click4"
        android:layout_toStartOf="@+id/click4"
        android:textColor="#080808"
        android:textStyle="italic"
        android:textSize="15dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/click4"
        android:checked="false"
        android:layout_below="@+id/batalla"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
