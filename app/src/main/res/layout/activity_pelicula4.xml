<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.geseni_pc.examen1.Pelicula4">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#52f6ff0e">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="LA ULTIMA BATALLA"
            android:id="@+id/tema4"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:background="#d8ba1d"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="109dp"
            android:layout_height="44dp"
            android:text="HORA INICIO:"
            android:id="@+id/hora7"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="15dp"
            android:textColor="#0c0c0c"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:30pm"
            android:id="@+id/hora7A"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            android:textColor="#c99e36" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="HORA FINAL:"
            android:id="@+id/hora8"
            android:layout_row="2"
            android:layout_column="0"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#040404" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00pm"
            android:id="@+id/hora8A"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="15dp"
            android:textColor="#c99e36"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="39dp"
            android:text="LUGAR:"
            android:id="@+id/lugar4"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="15dp"
            android:textColor="#080808"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salon B- 105"
            android:id="@+id/salonD"
            android:layout_row="3"
            android:layout_column="2"
            android:textSize="15dp"
            android:textColor="#c99e36"
            android:textStyle="bold|italic" />

        <ImageView
            android:layout_width="194dp"
            android:layout_height="194dp"
            android:id="@+id/imageView8"
            android:src="@drawable/cuatro"
            android:layout_row="7"
            android:layout_column="0" />
    </GridLayout>
</RelativeLayout>
